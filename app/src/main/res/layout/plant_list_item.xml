<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:layout_margin="@dimen/margin_top_bottom"
    android:background="@drawable/plant_list_item_background"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/card_view_margin"
        android:layout_marginEnd="@dimen/card_view_margin"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/plant_image"
            android:layout_width="@dimen/plant_item_image_width"
            android:layout_height="@dimen/plant_item_image_height"
            android:layout_gravity="center_vertical"
            android:src="@drawable/plant" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_plant_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom"
            android:layout_marginEnd="@dimen/margin_top_bottom"
            android:layout_marginBottom="@dimen/margin_top_bottom"
            android:fontFamily="@font/cookie_regular"
            android:text="@string/plant_title"
            android:textColor="@color/black"
            android:textSize="@dimen/list_title_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plant_list_item_margin_top"
                android:layout_marginEnd="@dimen/margin_top_bottom"
                android:fontFamily="@font/roboto_regular"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/last_watered"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_last_watered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plant_list_item_margin_top"
                android:layout_marginEnd="@dimen/margin_top_bottom"
                android:fontFamily="@font/roboto_regular"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plant_list_item_margin_top"
                android:layout_marginEnd="@dimen/margin_top_bottom"
                android:fontFamily="@font/roboto_regular"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/next_water"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_next_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plant_list_item_margin_top"
                android:layout_marginEnd="@dimen/margin_top_bottom"
                android:fontFamily="@font/roboto_regular"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plant_list_item_margin_top"
                android:layout_marginEnd="@dimen/margin_top_bottom"
                android:fontFamily="@font/roboto_regular"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/hour"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plant_list_item_margin_top"
                android:layout_marginEnd="@dimen/margin_top_bottom"
                android:fontFamily="@font/roboto_regular"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/color_layout"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/margin_top_bottom" />

            <Button
                android:id="@+id/btn_water"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/plant_list_button_layout_height"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="@dimen/margin_left_right"
                android:background="@drawable/button_custom"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end"
                android:text="@string/water"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>