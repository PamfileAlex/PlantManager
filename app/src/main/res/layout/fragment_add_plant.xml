<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.AddPlantFragment">

    <TextView
        android:id="@+id/tv_add_plant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:text="@string/add_plant_title"
        android:textSize="@dimen/title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Plant name"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_add_plant_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/elements_height"
            android:layout_weight="0.5"
            android:background="@drawable/edit_text_custom"
            android:gravity="center"
            android:hint="Plant name"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Category"
            android:textSize="@dimen/text_size" />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_border"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/custom_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/dropdown" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/image"
            android:layout_width="10dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:background="@drawable/plant"/>

        <Button
            android:id="@+id/btn_add_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/elements_height"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_custom"
            android:gravity="center"
            android:text="Add image"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/elements_height"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="76dp"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@drawable/button_custom"
        android:text="Add plant"
        android:textColor="@android:color/white" />
</LinearLayout>